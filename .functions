# compile package
cpac()
{
	if [ $1 = "" ]
	then
		echo "Please specify the source files location"
	else
		if [ ! -d Classes ]
		then
			dqt='"'
			mkdir Classes
			echo "${dqt}Classes${dqt} directory created"
		fi

		if [ $# -eq 1 ]
		then
			javac -d Classes $(find $1 -name '*.java')
		else
			javac -d Classes -cp $2 $(find $1 -name '*.java')
		fi
	fi
}

