# Source: https://askubuntu.com/a/20416/356625
# Source: https://unix.stackexchange.com/a/207213/307359
printpathlist()
{
	if [ ! -f ~/.jumpportals ]
	then
		touch ~/.jumpportals
	fi

	sed "s|    ||g;s|$HOME|~|g" <(nl ~/.jumpportals)
}

# Source: https://stackoverflow.com/a/4749368/9157799
lineexist()
{
	if [ $# -ne 2 ]
	then
		echo "usage: lineexist [line string] [file]"
		return
	fi

	if grep -Fxq "$1" $2
	then
		echo "exist"
	else
		echo "notexist"
	fi
}

j()
{
	if [ $# -gt 1 ]
	then
		echo "usage:"
		echo "\tj [jumpportal number]"
		echo "\tj"
		return
	fi

	if [ $# -eq 0 ]
	then
		printpathlist
		return
	fi

	cd "$(getline $1 ~/.jumpportals)"
	pwd | sed "s|$HOME|~|"
	ls
}

# Source: https://stackoverflow.com/a/5413132/9157799
deleteportal()
{
	grep -v "$1" ~/.jumpportals > temp && mv temp ~/.jumpportals
}

proposejumpportal()
{
	if [[ "$PWD" == "$HOME" ]]
	then
		return
	fi

	if [[ "$(lineexist "$PWD" ~/.jumpportals)" == "exist" ]]
	then
		deleteportal "$PWD"
	elif [ $(numberofline ~/.jumpportals) -ge 10 ]
	then
		removelastline ~/.jumpportals
	fi
	insertlinetotop "$PWD" ~/.jumpportals
}

o()
{
	if [ $# -eq 1 ]
	then
		proposejumpportal
	fi

	xdg-open "$@"
}

v()
{
	if [ $# -gt 0 ]
	then
		proposejumpportal
	fi

	vim "$@"
}
